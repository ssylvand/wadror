<p id="notice"><%= notice %></p>

<h1>Listing styles</h1>
<p> Number of styles: <%= @styles.count %> </p>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Style</th>
  </tr>
  </thead>

  <tbody>
  <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.style, style %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to('New Style', new_style_path, class:"btn btn-primary") if current_user %>