<h1>Beer places search</h1>
<%= form_tag places_path do %>
    city <%= text_field_tag :city, params[:city] %>
    <%= submit_tag "Search", class:"btn btn-primary" %>
<% end %>

<% if @places %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Street</th>
        <th>City</th>
        <th>Zip</th>
        <th>Country</th>
        <th>Overall</th>
      </tr>
      </thead>
      <tbody>
      <% @places.each do |place| %>
          <tr>
            <td><%= link_to place.name, places_path + '/' + place.id %></td>
            <td><%= place.status %></td>
            <td><%= place.street %></td>
            <td><%= place.city %></td>
            <td><%= place.zip %></td>
            <td><%= place.country %></td>
            <td><%= place.overall %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>